<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tistory.dayglo.sopt180407_2.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/camera"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@drawable/instagram"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <!--border-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E3E3"
        />

    <!--upper part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="vertical"
        >

        <!--menu layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="스토리"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/show_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="모두 보기"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow"
                android:layout_toLeftOf="@+id/show_all_tv"
                />

        </RelativeLayout>

        <!--story layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:background="#FAF9FA"
            >

            <!--my picture-->
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/user_pic_iv"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic1"
                        />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#539529"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--user1's picture-->
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                >

                <RelativeLayout
                    android:id="@+id/other_pic_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/insta"
                        />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic2"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구1"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--user2's picture-->
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                >

                <RelativeLayout
                    android:id="@+id/other_pic_iv1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/insta"
                        />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic2"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구2"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--user3's picture-->
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                >

                <RelativeLayout
                    android:id="@+id/other_pic_iv3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/insta"
                        />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic3"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구3"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

    <!--border-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E3E3"
        />

    <!--feed layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                >

                <!--uploader's pic-->
                <ImageView
                    android:id="@+id/uploader_pic_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic1"
                    android:layout_centerVertical="true"
                    />

                <!--uploader's ID-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Piccachu"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/uploader_pic_iv"
                    android:layout_centerVertical="true"
                    />

                <!--more image button-->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/points"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pikapika"
                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                >

                <!--uploader's pic-->
                <ImageView
                    android:id="@+id/uploader_pic_iv2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic1"
                    android:layout_centerVertical="true"
                    />

                <!--uploader's ID-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Piccachu"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/uploader_pic_iv2"
                    android:layout_centerVertical="true"
                    />

                <!--more image button-->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/points"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pikapika"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>